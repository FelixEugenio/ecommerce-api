<!DOCTYPE html>
<html>
    <head>
        <% include('../partials/header.ejs') %>
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <h2>Recuperar Senha</h2>
                    <hr /><br />

                    <% if(success) { %>
                        <div class="alert alert-success">
                            <%= success %>
                        </div>

                        <div class="text-center">
                            <h3>Agora pode fazer seu login</h3>
                        </div>
                    <% } %>

                    <% if(error) { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                    <% } %>

                    <% if(!success) { %>
                        <p>Digite aqui sua nova senha</p>
    
                        <form action="/v1/api/users/password-recovery" method="post">
                            <div class="form-group">
                                <label for="password">Nova Senha</label>
                                <input type="password" name="password" class="form-control" placeholder="Digite sua nova senha" required />
                                <input type="hidden" name="token" value="<%= token %>" />
                            </div>
                            <button type="submit" class="btn btn-primary">Recuperar Senha</button>
                        </form>
                    <% } %>    
                </div>
            </div>
        </div>
    </body>
</html>
